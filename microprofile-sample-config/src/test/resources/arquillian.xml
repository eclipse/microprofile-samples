<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://jboss.org/schema/arquillian"
            xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <container qualifier="arquillian-wildfly-remote"/>
    <container qualifier="arquillian-wildfly-managed">
        <configuration>
            <property name="jbossHome">target/wildfly-10.1.0.Final</property>
            <property name="javaVmArguments">-Xmx1024m -Xnoagent -Djava.compiler=NONE -Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=5005</property>
            <property name="allowConnectingToRunningServer">true</property>
        </configuration>
    </container>
    <container qualifier="arquillian-hammock"/>
    <container qualifier="arquillian-tomee-remote"/>
    <container qualifier="arquillian-tomee-managed">
        <configuration>
            <property name="dir">target/apache-tomee-remote</property>
            <property name="appWorkingDir">target/arquillian-test-working-dir</property>
            <property name="httpPort">-1</property>
            <property name="httpsPort">-1</property>
            <property name="stopPort">-1</property>
        </configuration>
    </container>

    <!-- THORNTAIL Arquillian container (otherwise tests fail with connection refused) -->
    <container qualifier="thorntail-io">
        <configuration>
            <property name="host">${swarm.bind.address}</property>
            <property name="port">${swarm.http.port}</property>
        </configuration>
    </container>
</arquillian>
